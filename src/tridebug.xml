<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="plugin" group="system" method="upgrade">
	<name>plg_system_tridebug</name>
	<author>René Bählkow</author>
	<creationDate>January 2016</creationDate>
	<copyright>Copyright (C) 2016 René Bählkow</copyright>
	<license>GNU General Public License version 3 or later; see LICENSE</license>
	<authorEmail>triiuark@projekt182.de</authorEmail>
	<authorUrl>github.com/Triiuark</authorUrl>
	<version>0.3.0</version>
	<description>plg_system_tridebug_xml_desc</description>
	<files>
		<filename plugin="tridebug">tridebug.php</filename>
		<filename>d.php</filename>
		<folder>fields</folder>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_system_tridebug.ini</language>
		<language tag="en-GB">en-GB.plg_system_tridebug.sys.ini</language>
		<language tag="de-DE">de-DE.plg_system_tridebug.ini</language>
		<language tag="de-DE">de-DE.plg_system_tridebug.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset
					addfieldpath="/plugins/system/tridebug/fields"
					name="basic">
				<field
						name="printJoomla"
						type="radio"
						class="btn-group"
						default="0"
						description="plg_system_tridebug_field_print_joomla_desc"
						label="plg_system_tridebug_field_print_joomla_label">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
						name="printSuppressed"
						type="radio"
						class="btn-group"
						default="0"
						description="plg_system_tridebug_field_print_suppressed_desc"
						label="plg_system_tridebug_field_print_suppressed_label">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
						name="printTraces"
						type="radio"
						class="btn-group"
						default="1"
						description="plg_system_tridebug_field_print_traces_desc"
						label="plg_system_tridebug_field_print_traces_label">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
						name="oneTmpFile"
						type="radio"
						class="btn-group"
						default="0"
						description="plg_system_tridebug_field_one_tmp_file_desc"
						label="plg_system_tridebug_field_one_tmp_file_label">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
						name="enableHint"
						type="tridebugEnableHint"
						description="plg_system_tridebug_field_enable_hint_desc"
						label="plg_system_tridebug_field_enable_hint_label"/>
			</fieldset>
		</fields>
	</config>
</extension>
